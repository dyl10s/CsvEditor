@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <button class="btn btn-primary" onclick="openFileReader()">Upload Document</button>
    <input type="file" style="display: none" id="excelSheet" name="excelSheet" />

    <div class="w-100 mt-5">
        <table class="table table-bordered mb-0">
            <thead>
                <tr>
                    <th scope="col" colspan="1000000" id="fileName">Main File.xlxs</th>
                </tr>
            </thead>
        </table>
    </div>
    <div class="row mx-0" style="border: 5px groove; width: 100%; height: 70vh">
        <div id="dataSection" class="w-100 h-100 overflow-auto">
            <table class="table table-bordered">
                <tbody id="tableRows">
                </tbody>
            </table>
        </div>
    </div>


</div>

<script src="~/js/ExcelTable.js" asp-append-version="true"></script>